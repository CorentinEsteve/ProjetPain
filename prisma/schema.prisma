generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  name            String
  email           String  @unique
  password        String
  deliveryAddress String
  orderHistory    Order[]
  loyaltyPoints   Int
}

model Product {
  id            Int          @id @default(autoincrement())
  name          String
  description   String
  price         Float
  image         String
  category      String
  Order         Order?       @relation(fields: [orderId], references: [id])
  orderId       Int?
  Menu          Menu?        @relation(fields: [menuId], references: [id])
  menuId        Int?
  SpecialDiet   SpecialDiet? @relation(fields: [specialDietId], references: [id])
  specialDietId Int?
}

model Order {
  id              Int            @id @default(autoincrement())
  user            User           @relation(fields: [userId], references: [id])
  userId          Int
  products        Product[]
  orderDate       DateTime       @default(now())
  deliveryDate    DateTime
  status          String
  Customization   Customization? @relation(fields: [customizationId], references: [id])
  customizationId Int?
}

model Customization {
  id          Int     @id @default(autoincrement())
  cakeType    String
  inscription String
  order       Order[]
}

model FAQ {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}

model Menu {
  id           Int       @id @default(autoincrement())
  category     String
  products     Product[]
  images       String[]
  descriptions String[]
}

model SpecialDiet {
  id              Int       @id @default(autoincrement())
  compatibleItems Product[]
  dietDescription String
}

model CookingClass {
  id          Int      @id @default(autoincrement())
  category    String
  description String
  price       Float
  image       String
  date        DateTime
}
